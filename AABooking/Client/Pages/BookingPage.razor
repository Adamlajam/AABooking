@page "/BookingPage"
<!DOCTYPE html>
<html>
<head>
    <title>AABooking - Reserve a Table</title>
    <style>
        body {
            background-color: #FFC107;
        }

        form {
            margin: 50px auto;
            width: 500px;
            padding: 30px;
            background-color: white;
            border-radius: 10px;
            text-align: center;
        }

        h1 {
            font-size: 2em;
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 10px;
        }

        select,
        input[type="datetime-local"] {
            width: 100%;
            padding: 10px;
            font-size: 1.2em;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid lightgray;
        }

        input[type="submit"] {
            width: 200px;
            padding: 10px;
            background-color: #FFC107;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.2em;
            cursor: pointer;
        }

        h2 {
            font-size: 1.5em;
            margin-top: 50px;
        }

        p {
            font-size: 1.2em;
        }
    </style>
</head>
<body>

    <form method="post" action="/BookingConfirmation">
        <h1>Reserve a Table</h1>
        <div>
            <label for="restaurantList">Select a restaurant:</label>
            <select id="restaurantList" name="selectedRestaurant">
                <option value="restaurant1">Italian Restaurant</option>
                <option value="restaurant2">Mexican Restaurant</option>
                <option value="restaurant3">Chinese Restaurant</option>
            </select>
            <label for="tableList">Select a Table:</label>
            <select id="tableList" name="SelectedTable">
                <option value="Table1">1</option>
                <option value="Table2">2</option>
                <option value="table3">3</option>
            </select>
        </div>
        <div>
            <label for="reservationTime">Reservation time:</label>
            <input type="datetime-local" id="reservationTime" name="selectedTime">
        </div>
        <div>
            <input type="submit" value="Submit">
        </div>
        <div>
            <input type="hidden" name="selectedRestaurant" value="@SelectedRestaurant">
            <input type="hidden" name="selectedTable" value="@SelectedTable">
            <input type="hidden" name="selectedTime" value="@SelectedTime.ToString("yyyy-MM-ddTHH:mm")">
        </div>
    </form>

</body>
</html>
@functions {
    public string SelectedRestaurant { get; set; }
    public string SelectedTable { get; set; }
    public DateTime SelectedTime { get; set; }
}

