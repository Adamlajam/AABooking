    <script>
      function toggleMenu(event) {
        event.preventDefault();
        let menuItems = event.target.parentNode.querySelector(".menu-items");
        if (menuItems.style.display === "none") {
          menuItems.style.display = "block";
        } else {
          menuItems.style.display = "none";
        }
      }
