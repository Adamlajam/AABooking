@page "/"

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #FFC107;
            color: #333;
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
        }

        .header {
            background-color: #333;
            color: #333;
            padding: 20px;
        }

            .header h1 {
                margin: 0;
            }

        .menu {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .menu-item {
            width: 300px;
            margin: 20px;
            text-align: center;
            background-color: #fff;
            padding: 20px;
            box-shadow: 2px 2px 8px #ccc;
        }

            .menu-item h3 {
                color: #333;
            }
    </style>
    <title>Delicious Restaurant</title>
</head>
<body>
    <div class="header">
        <h1>Deli</h1>
    </div>
    <div class="container">
        <h1>Today's Popular Dishes</h1>
        <div class="menu">
            <div class="menu-item">
                <h3>Mexican Restaurant</h3>
                <p>Burrito Bowl</p>
            </div>
            <div class="menu-item">
                <h3>Italian Restaurant</h3>
                <p>Bruschetta</p>
            </div>
        </div>
    </div>
</body>
</html>
